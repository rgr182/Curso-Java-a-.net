@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.MisActividadesPA>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clublia-Login</title>
    <link href="/bcss/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/misActividadesPA.css">
</head>

<body style="background-image: url('/assets/home/BackgroundPrimariaAlta.png');">

    <div class="header float-animation">

        <a class="btn-actividades" href="../HomePA/">
            <img src="/assets/misActividades/MisTareasPLANETA.png" class="btn-actividades-img" alt="Isla">
            <h5>Mis Tareas</h5>
        </a>

        <div class="avatar">
            <img id="avatarImg" class="avatar-img" src="/assets/images/avatars/bootFace.png" alt="Avatar">
        </div>

        <div class="user">
            <div class="user-img">
                <h6 id="userName">Usuario</h6>
            </div>
            <div class="user-img">
                <h6 id="grade">Grado</h6>
            </div>
            <div class="user-img">
                <h6 id="schoolName">Escuela</h6>
            </div>

        </div>
        <a href="#">
            <img src="/assets/home/logoutLia.png" class="btn-logout" alt="" id="logout-btn">
        </a>

    </div>

    <div class="contenedor">

        <div class="islas">

            <a href="#" class="isla">
                <img src="@(Model.FirstIslandImage != null ? Model.FirstIslandImage.Url() : "/assets/misActividades/Misgalaxias.png")" class="isla-img" alt="Isla">
                <h6>@Model.FirstIslandTitle</h6>
            </a>

            <a href="#" class="isla">
                <img src="@(Model.SecondIslandImage != null ? Model.SecondIslandImage.Url() : "/assets/misActividades/MiMundoLIA.png")" class="isla-img" alt="Isla">
                <h6>@Model.SecondIslandTitle</h6>
            </a>

            <a href="#" class="isla">
                <img src="@(Model.ThirdIslandImage != null ? Model.ThirdIslandImage.Url() : "/assets/misActividades/MisClases.png")" class="isla-img" alt="Isla">
                <h6>@Model.ThirdIslandTitle</h6>
            </a>

        </div>

        <div class="table-actividades" id="tabla-actividades-pendientes">

            <div class="header-contenedor">
                <div class="header-table">
                    <h6 class="header-table-title">@Model.FirstTableTitle</h6>
                </div>
            </div>

            <div class="table-actividades-body">

                <div class="registros-actividades" id="registros-actividades-pendientes">

                    <div class="registro-actividad" id="actividades-pendientes-body-mensaje">
                        <h6 id="actividades-pendientes-body-mensaje-text">Cargando...</h6>

                    </div>
                   
                </div>

            </div>

        </div>

        <div class="table-actividades" id="actividades-entregadas">

            <div class="header-contenedor">
                <div class="header-table">
                    <h6 class="header-table-title">@Model.SecondTableTitle</h6>
                </div>
            </div>

            <div class="table-actividades-body">

                <div class="registros-actividades" id="registros-actividades-entregadas">
                    <div class="registro-actividad" id="actividades-entregadas-body-mensaje">
                        <h6 id="actividades-entregadas-body-mensaje-text">Cargando...</h6>

                    </div>
                </div>

            </div>

        </div>

        <div class="table-actividades" id="actividades-calificadas">

            <div class="header-contenedor">
                <div class="header-table">
                    <h6 class="header-table-title">@Model.ThirdTableTitle</h6>
                </div>
            </div>

            <div class="table-actividades-body">
                <div class="registros-actividades" id="registros-actividades-calificadas">
                    <div class="registro-actividad" id="actividades-calificadas-body-mensaje">
                        <h6 id="actividades-calificadas-body-mensaje-text">Cargando...</h6>
                    </div>
                </div>

            </div>

        </div>

        <div class="table-actividades" id="table-calendario">

            <div class="header-contenedor">
                <div class="header-table">
                    <h6 class="header-table-title">@Model.FourthTableTitle</h6>
                </div>
            </div>

            <div class="table-actividades-body">

                <div class="registro-actividad">
                    <h6>LUN-MAR-MIE-JUE-VIE</h6>
                </div>

            </div>

        </div>
    </div>

    <script src="/scripts/misActividades.js" type="module"></script>
    <script src="/bjs/bootstrap.bundle.min.js"></script>

</body>

</html>